<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Student Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">

    <div class="bg-white shadow-xl rounded-xl w-full max-w-xl p-8">

        <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Create an Account</h2>

        <!-- FORM -->
        <form action="/register" method="POST" enctype="multipart/form-data" class="space-y-5">

            <!-- Profile Photo -->
            <div class="flex flex-col items-center">
                <label class="block text-gray-700 font-medium mb-2">Profile Photo</label>

                <div class="w-28 h-28 rounded-full overflow-hidden border-2 border-gray-300 mb-3">
                    <img id="previewImg" src="https://via.placeholder.com/150" class="w-full h-full object-cover">
                </div>

                <input 
                    type="file" 
                    name="photo" 
                    id="photoInput"
                    accept="image/*"
                    class="block text-sm text-gray-600
                           file:mr-4 file:py-2 file:px-4
                           file:rounded-lg file:border-0
                           file:text-sm file:font-medium
                           file:bg-indigo-600 file:text-white
                           hover:file:bg-indigo-700 cursor-pointer"
                    required
                >
            </div>

            <!-- Full Name -->
            <div>
                <label class="text-gray-700 font-medium">Full Name</label>
                <input type="text" name="name" required
                    class="w-full mt-1 p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Username -->
            <div>
                <label class="text-gray-700 font-medium">Username</label>
                <input type="text" name="username" required
                    class="w-full mt-1 p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Email -->
            <div>
                <label class="text-gray-700 font-medium">Email</label>
                <input type="email" name="email" required
                    class="w-full mt-1 p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Phone -->
            <div>
                <label class="text-gray-700 font-medium">Phone</label>
                <input type="number" name="phone" required
                    class="w-full mt-1 p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Role -->
            <div>
                <label class="text-gray-700 font-medium">Role</label>
                <select name="role" required
                    class="w-full mt-1 p-2 border rounded-lg bg-white focus:ring-2 focus:ring-indigo-500">
                    <option value="student">Student</option>
                    <option value="staff">Staff</option>
                    <option value="admin">Admin</option>
                </select>
            </div>

            <!-- Password -->
            <div>
                <label class="text-gray-700 font-medium">Password</label>
                <input type="password" name="password" required
                    class="w-full mt-1 p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Confirm Password -->
            <div>
                <label class="text-gray-700 font-medium">Confirm Password</label>
                <input type="password" name="confirmPassword" required
                    class="w-full mt-1 p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            </div>

            <!-- Submit Button -->
            <button 
                type="submit"
                class="w-full bg-indigo-600 text-white py-2 rounded-lg font-medium hover:bg-indigo-700 transition">
                Register
            </button>

            <p class="text-center text-sm text-gray-600 mt-2">
                Already have an account?
                <a href="/login" class="text-indigo-600 font-medium hover:underline">Login</a>
            </p>

        </form>
    </div>

    <!-- Image Preview Script -->
    <script>
        const photoInput = document.getElementById("photoInput");
        const previewImg = document.getElementById("previewImg");

        photoInput.addEventListener("change", () => {
            const file = photoInput.files[0];
            previewImg.src = URL.createObjectURL(file);
        });
    </script>

</body>
</html>
